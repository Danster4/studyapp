{{!-- login form section --}}
  <div class="row d-flex justify-content-center">
    <div>
      <form class="login-form">
        <div class="d-flex justify-content-between align-items-center text-white">
          <label for="email-login">Email:</label>
          <input class="d-flex justify-content-center align-items-center" placeholder="Enter Email" type="text" id="email-login" />
        </div>
        <div class="d-flex justify-content-between align-items-center text-white">
          <label for="password-login">Password: </label> <br />
          <input class="d-flex justify-content-center align-items-center" placeholder="Password" type="password" id="password-login" />
        </div>

        <br />

        <div class="d-flex justify-content-center">
          <button type="submit" id="loginbtn"class="btn btn-primary">Login</button>
        </div>
      </form>
    </div>
  </div>

  <br />

  <div class="row justify-content-center">
    <p class="text-white" id="noAccountYet">Do you not have an account? <span><a id="signup-link" href="/signup">Sign-Up Here!</a></span></p>
  </div>


  </div>
