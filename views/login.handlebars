  <div class="container col-lg-4 col-md-6 col-12" id="middle-widget">

{{!-- heading section --}}
  <div class="row justify-content-center">
    <a href="/">
      <img src="https://i.postimg.cc/4xcvFKTq/eleven-eleven-logo-v2-pixlr.png" id="logofront" alt="eleven eleven company logo" style="width:425px; height: 250px">
